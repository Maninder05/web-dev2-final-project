{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",                     // Use ESNext for Node
    "moduleResolution": "Node",
    "esModuleInterop": true,               // Allows `import jwt from 'jsonwebtoken'`
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist"
  },
  "include": ["src"]
}


